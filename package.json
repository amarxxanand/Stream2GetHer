{
  "name": "stream2gether",
  "version": "1.0.0",
  "description": "Real-time synchronized media platform using MERN stack",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": ["streaming", "synchronized", "media", "websocket", "youtube", "react", "nodejs"],
  "author": "Stream2Gether Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
